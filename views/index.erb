<html>
  <head></head>
  <body>
    <form action="/url" method="post">
      <input type="text" name="url" placeholder="Enter URL here">
      <input type="submit" value="Add link">
    </form>
    <div>
      <div style="color: red;">
        <%= flash[:error] %>
      </div>

      <ul>
        <% @links.each do |link| %>
          <li>
            <%= link %>
          </li>
        <% end %>
      </ul>
    </div>
  </body>
</html>
